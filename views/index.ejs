<%- include('partials/header') %>

<body>
    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <h1 class="mb-3">Question Guide</h1>
        <a href="/ask" class="btn btn-primary mb-3">Ask a Question</a>
        <% questions.forEach(question => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h3 class="card-title"><%= question.title %></h3>
            </div>
            <div class="card-footer text-end">
              <a href="/question/<%= question.id %>"><button class="btn btn-primary">Answer</button></a>
            </div>
          </div>
        <% }) %>
      </div>
    

    
</body>

<%- include('partials/footer') %>